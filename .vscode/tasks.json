// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$ts-webpack-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "npm",
			"script": "watch-tests",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": "build"
		},
		{
			"label": "tasks: watch-tests",
			"dependsOn": [
				"npm: watch",
				"npm: watch-tests"
			],
			"problemMatcher": []
		},
		{
			"label": "Build Dev Extension",
			"command": "vsce",
			"args": ["package", "-o", "extension.vsix"],
			"type": "shell"
		},
		{
			"label": "Docker List BuildX Containers (step 1)",
			"command": "docker",
			"args": ["buildx", "ls"],
			"type": "shell"
		},
		{
			"label": "Docker Create BuildX Container (step 2)",
			"command": "docker",
			"args": ["buildx", "create", "--name", "webber-container", "--driver=docker-container"],
			"type": "shell"
		},
		{
			"label": "Docker Build and Push MultiArch Image (step 3)",
			"command": "docker",
			"args": [
				"buildx", "build",
				"--tag", "swifweb/webber:latest",
				"--platform", "linux/amd64,linux/arm64",
				"--builder", "webber-container",
				"--push",
				"./DockerImage"
			],
			"type": "shell"
		}
	]
}
