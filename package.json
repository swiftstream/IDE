{
  "name": "swiftstream",
  "version": "1.0.0",
  "displayName": "Swift Stream",
  "description": "Swift Stream by iMike",
  "publisher": "swiftstream",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.94.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/swiftstream/vsce.git"
  },
  "categories": [
    "Programming Languages",
    "Visualization"
  ],
  "keywords": [
    "swift",
    "swifweb",
    "web",
    "webber",
    "swifdroid",
    "android",
    "server",
    "docker",
    "vapor",
    "hummingbird",
    "live",
    "preview"
  ],
  "activationEvents": [
    "workspaceContains:Package.swift"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Swift Stream",
      "properties": {
        "web.hotReload": {
          "order": 1,
          "type": "boolean",
          "default": true,
          "description": "Hot reload in the browser whenever any file saved"
        },
        "web.hotRebuild": {
          "order": 2,
          "type": "boolean",
          "default": true,
          "description": "Hot rebuild whenever any file saved"
        },
        "web.loggingLevel": {
          "order": 3,
          "type": "string",
          "description": "Building process log level",
          "enum": [
            "Normal",
            "Detailed",
            "Verbose",
            "Unbearable"
          ],
          "default": "Normal",
          "uniqueItems": true
        },
        "web.appTargetName": {
          "order": 4,
          "type": "string",
          "description": "Name of the app target in Package.swift",
          "default": "App"
        },
        "web.serviceWorkerTargetName": {
          "order": 5,
          "type": "string",
          "description": "Name of the service worker target in Package.swift",
          "default": "Service"
        },
        "web.webSourcesPath": {
          "order": 6,
          "type": "string",
          "description": "Relative path to folder with web source files and package.json",
          "default": "WebSources"
        }
      }
    },
    "commands": [
      {
        "command": "runDebugging",
        "title": "Debug in Chrome",
        "icon": "$(debug-alt)"
      },
      {
        "command": "stopDebugging",
        "title": "Stop Debugging",
        "icon": {
          "dark": "assets/icons/debug-stop.svg",
          "light": "assets/icons/debug-stop.svg"
        }
      },
      {
        "command": "stopBuildingDebug",
        "title": "Stop Building",
        "icon": "$(debug-stop)"
      },
      {
        "command": "buildDebug",
        "title": "Build in Debug",
        "icon": {
          "dark": "assets/icons/hammer.svg",
          "light": "assets/icons/hammer.svg"
        }
      },
      {
        "command": "stopBuildingRelease",
        "title": "Stop Building",
        "icon": "$(debug-stop)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "group": "navigation@0",
          "command": "runDebugging",
          "when": "!isDebugging"
        },
        {
          "group": "navigation@0",
          "command": "stopDebugging",
          "when": "isDebugging"
        },
        {
          "group": "navigation@1",
          "command": "buildDebug",
          "when": "!isBuilding"
        },
        {
          "group": "navigation@1",
          "command": "stopBuildingDebug",
          "when": "isBuilding"
        }
      ],
      "view/item/context": [
        {
          "group": "inline",
          "command": "stopBuildingDebug",
          "when": "view == swiftstreamSidebar && viewItem == Build && isBuilding"
        },
        {
          "group": "inline",
          "command": "stopBuildingRelease",
          "when": "view == swiftstreamSidebar && viewItem == BuildRelease && isBuildingRelease"
        }
      ]
    },
    "keybindings": [
      {
        "command": "-runDebugging",
        "key": "ctrl+r",
        "mac": "cmd+r",
        "when": "true"
      },
      {
        "command": "-stopDebugging",
        "key": "ctrl+.",
        "mac": "cmd+.",
        "when": "true"
      },
      {
        "command": "-buildDebug",
        "key": "ctrl+b",
        "mac": "cmd+b"
      }
    ],
    "views": {
      "explorer": [],
      "swiftstream-sidebar": [
        {
          "id": "swiftstreamSidebar",
          "name": "PROJECT",
          "icon": "media/dep.svg",
          "contextualTitle": "Swift Stream Actions"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "swiftstream-sidebar",
          "title": "Swift Stream",
          "icon": "media/VSCodeIcon.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "explorer",
        "contents": "[Create Swift Project](command:startNewProjectWizard)",
        "when": "swiftstream.state == NoProjectFolder"
      },
      {
        "view": "explorer",
        "contents": "[Create Swift Project](command:startNewProjectWizard)",
        "when": "swiftstream.state == EmptyProjectFolder"
      },
      {
        "view": "swiftstreamSidebar",
        "contents": "Ready to create a project?\n[Start New Project](command:startNewProjectWizard)\n[Open project](command:openProject)",
        "when": "swiftstream.state == NoProjectFolder"
      }
    ],
    "taskDefinitions": [
      {
        "type": "crawlserver",
        "required": ["type"],
        "properties": {
          "type": {
            "type": "string",
            "description": "carwlserver"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.92.0",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "@wasmer/wasm-transformer": "^0.12.0",
    "eslint": "^8.57.0",
    "handlebars": "^4.7.8",
    "jsdom": "^25.0.1",
    "json5": "^2.2.3",
    "sass": "^1.79.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": ">=5.94.0",
    "webpack-cli": "^5.1.4",
    "ws": "^8.18.0"
  }
}
